<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".InfoCalculator">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Message"
        android:id="@+id/writeButton"
        android:layout_marginBottom="152dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="writeMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Message"
        android:id="@+id/readButton"
        android:layout_marginTop="70dp"
        android:onClick="readMessage"
        android:layout_alignTop="@+id/writeButton"
        android:layout_alignRight="@+id/writeButton"
        android:layout_alignEnd="@+id/writeButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/writeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Hello World"
        android:layout_below="@+id/readButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />
</RelativeLayout>
